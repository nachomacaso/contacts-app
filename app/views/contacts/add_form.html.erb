<h1>Contact Form</h1>
<%= form_tag '/contact_show', method: :post do %>
  <div>
    <%= label_tag :first_name, 'Enter First Name' %>
    <%= text_field_tag :first_name, nil %>
  </div>
  <div>
    <%= label_tag :last_name, 'Enter Last Name' %>
    <%= text_field_tag :last_name, nil %>
  </div>
  <div>
    <%= label_tag :email, 'Enter Email' %>
    <%= text_field_tag :email, nil %>
  </div>
  <div>
    <%= label_tag :phone_number, 'Enter Phone Number' %>
    <%= text_field_tag :phone_number, nil %>
  </div>
  <div>
    <%= submit_tag 'Send Contact Info' %>
  </div>
<% end %>