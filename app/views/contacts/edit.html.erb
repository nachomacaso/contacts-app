<h1>Edit Contact</h1>
<%= form_tag "/contacts/#{@contact.id}", method: :patch do %>
  <div>
    <%= label_tag :first_name, 'Enter First Name' %>
    <%= text_field_tag :first_name, @contact.first_name %>
  </div>
  <div>
    <%= label_tag :last_name, 'Enter Last Name' %>
    <%= text_field_tag :last_name, @contact.last_name %>
  </div>
  <div>
    <%= label_tag :email, 'Enter Email' %>
    <%= text_field_tag :email, @contact.email %>
  </div>
  <div>
    <%= label_tag :phone_number, 'Enter Phone Number' %>
    <%= text_field_tag :phone_number, @contact.phone_number %>
  </div>
  <div>
    <%= submit_tag 'Send Contact Info' %>
  </div>
<% end %>